<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponseSummaryCardViewHolder">
    <androidx.cardview.widget.CardView
        android:id="@+id/responseSummaryCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065">


        <LinearLayout
            android:id="@+id/eachResponseSummaryLLParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/summaryquestionsLL"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@color/responseLLbg"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/responseQuestionNumber_txtview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/responsedatebg"
                    android:text="@string/response_summary_question_txt"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/responseSummaryQuestionsLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/responseSummaryQuestion_txtview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Q:Today i feel the staff carring for my relative or friend gave me and other visitors care and support in a sensitive way:"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/responseSummaryQuestionAnswer_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/nhs_color"
                    android:text="Response : All Of the time" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/nhs_color"
        app:layout_constraintBottom_toBottomOf="@+id/responseSummaryCardView"
        app:layout_constraintEnd_toEndOf="@+id/responseSummaryCardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/responseSummaryCardView"
        app:layout_constraintVertical_bias="0.001" />
</androidx.constraintlayout.widget.ConstraintLayout>